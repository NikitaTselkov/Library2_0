<Page x:Class="Library2_0.Pages.Buttons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library2_0.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buttons">

    <Grid Background="#343334" >

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">


            <Button Content="C#"  Style="{StaticResource Button}" Command="{Binding btn_C_Click}" Effect="{StaticResource ButtonShadow}" />

            <Button Content="WPF" Style="{StaticResource Button}" Command="{Binding btn_WPF_Click}" Effect="{StaticResource ButtonShadow}" />

            <Button Content="WEB" Style="{StaticResource Button}" Command="{Binding btn_WEB_Click}" Effect="{StaticResource ButtonShadow}" />

        </StackPanel>

        <Frame x:Name="FrameButtons1" Background="{x:Null}" Content="{Binding CurrentPage}"  />

    </Grid>
</Page>
