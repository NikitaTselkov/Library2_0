<Window x:Class="Library2_0.windows.Delet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library2_0.windows"
        mc:Ignorable="d"
        Title="DeletWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="_textblock" Text="test" FontSize="30" Margin="5" />
            <Button Name="View" Click="View_Click" Content="View" Margin="5" FontSize="25" />
            <Label Content="Введите id который хотите удалить" HorizontalAlignment="Center" FontSize="20"/>

            <TextBox Text="" FontSize="30" x:Name="TextBoxId" />
            <Button x:Name="DeletButton" Content="delet" FontSize="30" Margin="5" Click="Delet_Click" />
        </StackPanel>

    </Grid>
</Window>
