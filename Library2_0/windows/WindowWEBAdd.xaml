<Window x:Class="Library2_0.windows.WindowWEBAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library2_0.windows"
        mc:Ignorable="d"
        Title="WindowWEBAdd" Height="450" Width="800">
    <Grid>
        <StackPanel Background="{StaticResource WEBCollor2}">
            <Label Content="Name:" FontSize="15" />
            <TextBox  Margin="5" FontSize="30" x:Name="_name" Style="{StaticResource TextBoxStyle}"  Background="{StaticResource WEBCollor3}" />
            <Label Content="This:" FontSize="15" />
            <TextBox  Margin="5" FontSize="30" x:Name="_this" Style="{StaticResource TextBoxStyle}"  Background="{StaticResource WEBCollor3}"/>
            <Label Content="Code:" FontSize="15" />
            <TextBox  Margin="5" FontSize="30" x:Name="_code" Style="{StaticResource TextBoxStyle}"   Background="{StaticResource WEBCollor3}" />

            <Button Content="Add" Click="Button_Add" FontSize="25" x:Name="AddButton" Background="White" />
        </StackPanel>
    </Grid>
</Window>
